<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;"> EDIT
                <%=alumni.name %> 's PROFILE
            </h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/alumni/<%= alumni._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="alumni[name]" value="<%= alumni.name%>" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="alumni[image]" value="<%= alumni.image%>" placeholder="Image URL" >
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="alumni[college]" value="<%= alumni.college%>" placeholder="College's Name ">
                    </div>


                    <div class="form-group">
                        <input class="form-control" type="text" name="alumni[mobile]" value="<%= alumni.mobile%>" placeholder="Mobile">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="alumni[email]" value="<%= alumni.email%>" placeholder="Email">
                    </div>


                    <div class="form-group">
                        <input class="form-control" type="text" name="alumni[address]" value="<%= alumni.address%>" placeholder="Current Location">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>


                </form>
                <a href="/alumni">Go Back</a>
            </div>

        </div>
    </div>
    <% include ../partials/footer %>